package com.banking.service.impl;

import com.banking.model.Account;
import com.banking.model.Transaction;
import com.banking.repository.AccountRepository;
import com.banking.repository.TransactionRepository;
import com.banking.service.TransactionService;
import jakarta.transaction.Transactional;
import lombok.RequiredArgsConstructor;
import org.springframework.stereotype.Service;

import java.math.BigDecimal;
import java.util.List;

@Service
@RequiredArgsConstructor
public class TransactionServiceImpl implements TransactionService {

    private final AccountRepository accountRepository;
    private final TransactionRepository transactionRepository;

    /**
     * ✅ Handles money transfer between two accounts.
     * Rolls back automatically if any exception occurs.
     */
    @Transactional
    public Transaction transfer(String fromAccountNumber, String toAccountNumber, BigDecimal amount) {

        // 1️⃣ Fetch both accounts from DB
        Account sender = accountRepository.findByAccountNumber(fromAccountNumber)
                .orElseThrow(() -> new RuntimeException("Sender account not found"));

        Account receiver = accountRepository.findByAccountNumber(toAccountNumber)
                .orElseThrow(() -> new RuntimeException("Receiver account not found"));

        // 2️⃣ Prevent same account transfer
        if (fromAccountNumber.equals(toAccountNumber)) {
            return transactionRepository.save(Transaction.builder()
                    .fromAccount(fromAccountNumber)
                    .toAccount(toAccountNumber)
                    .amount(amount)
                    .status("FAILED - SAME ACCOUNT")
                    .build());
        }

        // 3️⃣ Check for sufficient funds
        if (sender.getBalance().compareTo(amount) < 0) {
            return transactionRepository.save(Transaction.builder()
                    .fromAccount(fromAccountNumber)
                    .toAccount(toAccountNumber)
                    .amount(amount)
                    .status("FAILED - INSUFFICIENT BALANCE")
                    .build());
        }

        // 4️⃣ Update balances
        sender.setBalance(sender.getBalance().subtract(amount));
        receiver.setBalance(receiver.getBalance().add(amount));

        // 5️⃣ Save updated accounts
        accountRepository.save(sender);
        accountRepository.save(receiver);

        // 6️⃣ Save successful transaction record
        Transaction transaction = Transaction.builder()
                .fromAccount(fromAccountNumber)
                .toAccount(toAccountNumber)
                .amount(amount)
                .status("SUCCESS")
                .build();

        return transactionRepository.save(transaction);
    }

    /**
     * ✅ Fetches all transactions related to a given account.
     */
    public List<Transaction> getTransactionsForAccount(String accountNumber) {
        return transactionRepository.findByFromAccountOrToAccount(accountNumber, accountNumber);
    }
}
